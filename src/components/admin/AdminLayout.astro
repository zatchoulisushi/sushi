---
import { BarChart3, Package, Users, Settings, LogOut, Home } from 'lucide-astro';

interface Props {
  title: string;
  activeSection?: string;
}

const { title, activeSection } = Astro.props;
---

<!DOCTYPE html>
<html lang="fr" class="dark">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title} - Administration Osushi</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body class="bg-dark-950 text-white font-sans">
  <div class="flex h-screen">
    <!-- Sidebar -->
    <aside class="w-64 bg-dark-900 border-r border-white/10 flex flex-col">
      <div class="p-6 border-b border-white/10">
        <div class="flex items-center space-x-3">
          <span class="text-2xl">üç£</span>
          <div>
            <h1 class="text-lg font-bold">Osushi Admin</h1>
            <p class="text-sm text-white/60">Tableau de bord</p>
          </div>
        </div>
      </div>

      <nav class="flex-1 p-4">
        <ul class="space-y-2">
          <li>
            <a href="/admin" class={`nav-link ${activeSection === 'dashboard' ? 'active' : ''}`}>
              <BarChart3 size={20} />
              <span>Tableau de bord</span>
            </a>
          </li>
          <li>
            <a href="/admin/orders" class={`nav-link ${activeSection === 'orders' ? 'active' : ''}`}>
              <Package size={20} />
              <span>Commandes</span>
            </a>
          </li>
          <li>
            <a href="/admin/products" class={`nav-link ${activeSection === 'products' ? 'active' : ''}`}>
              <Package size={20} />
              <span>Produits</span>
            </a>
          </li>
          <li>
            <a href="/admin/customers" class={`nav-link ${activeSection === 'customers' ? 'active' : ''}`}>
              <Users size={20} />
              <span>Clients</span>
            </a>
          </li>
          <li>
            <a href="/admin/settings" class={`nav-link ${activeSection === 'settings' ? 'active' : ''}`}>
              <Settings size={20} />
              <span>Param√®tres</span>
            </a>
          </li>
        </ul>
      </nav>

      <div class="p-4 border-t border-white/10">
        <a href="/" class="nav-link">
          <Home size={20} />
          <span>Retour au site</span>
        </a>
        <button id="admin-logout" class="nav-link w-full text-left mt-2">
          <LogOut size={20} />
          <span>D√©connexion</span>
        </button>
      </div>
    </aside>

    <!-- Main Content -->
    <main class="flex-1 overflow-y-auto">
      <header class="bg-dark-900 border-b border-white/10 p-6">
        <h1 class="text-2xl font-bold">{title}</h1>
      </header>
      
      <div class="p-6">
        <slot />
      </div>
    </main>
  </div>

  <style>
    .nav-link {
      @apply flex items-center space-x-3 px-4 py-3 rounded-xl text-white/70 hover:text-white hover:bg-white/10 transition-all duration-200;
    }
    
    .nav-link.active {
      @apply bg-primary-600/20 text-primary-400 border border-primary-600/30;
    }
  </style>

  <script>
    import { AuthService } from '../../lib/auth-static';

    document.getElementById('admin-logout')?.addEventListener('click', async () => {
      try {
        await AuthService.signOut();
        window.location.href = '/';
      } catch (error) {
        console.error('Logout error:', error);
      }
    });
  </script>
</body>
</html>